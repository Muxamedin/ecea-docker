# choose system
# ---------------------------------------------------
FROM ubuntu:16.04
#1st layer 
# ---------------------------------------------------
RUN apt-get update && apt-get install -y gcc
# ---------------------------------------------------
# 2d layer
# ---------------------------------------------------
COPY  /opt/ecloud  /opt
# 3d layer
# ---------------------------------------------------
COPY  rules  /opt/ecloud
# 4d layer
# ---------------------------------------------------
RUN /opt/ecloud/rules/install 
#----------------------------------------------------
# supervisor script
# ---------------------------------------------------
CMD ["/opt/ecloud/rules/auto"]
# ---------------------------------------------------
